{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@planetbyte/common": ["../../packages/common/dist"],
      "@planetbyte/common/*": ["../../packages/common/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}